        <Layout FixedNode="1" HorizontalSpacing="@HorizontalSpacing" VerticalSpacing="@VerticalSpacing" Type="LayoutType.MindMap" GetBranch="@getbranch"></Layout>
        <SnapSettings Constraints="@SnapConstraints.None"></SnapSettings>
